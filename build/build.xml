<project name="SetupJenkinsMaven" default="dist" basedir=".">
    <description>
        simple Ant script to run maven install commands for 
		libraries that are not present in any external repository.
    </description>
	
	<target name="init-os">
		<condition property="os.windows">
			<os family="windows"/>
		</condition>
		<condition property="os.unix">
			<os family="unix"/>
		</condition>
	</target>
	
	<target name="dist">
		<get src="http://selenium-release.storage.googleapis.com/3.3/selenium-java-3.3.1.zip" 
			dest="selenium-java-3.3.1.zip"
			skipexisting="true"/>
		<unzip src="selenium-java-3.3.1.zip" dest="selenium-java-3.3.1" overwrite="false"/>
		
		<!-- the chromedriver is needed for testing against the Chrome browser -->
		<get src="http://chromedriver.storage.googleapis.com/2.28/chromedriver_mac64.zip" 
			dest="chromedriver_mac64-2.28.zip"
			skipexisting="true"/>
		<unzip src="chromedriver_mac64-2.28.zip" dest="chromedriver_mac64-2.28" overwrite="false"/>

		<get src="http://chromedriver.storage.googleapis.com/2.28/chromedriver_win32.zip" 
			dest="chromedriver_win32-2.28.zip"
			skipexisting="true"/>
		<unzip src="chromedriver_win32-2.28.zip" dest="chromedriver_win32-2.28" overwrite="false"/>
	</target>
  	
</project>